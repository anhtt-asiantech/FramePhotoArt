<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.anhttvn.framesphotoart">

    <uses-feature android:name="android.hardware.camera"  android:required="true"/>

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.hardware.camera.autofocus" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:largeHeap="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3840180634112397~7595813670"/>
        <activity android:name=".version_2.Main_v2"
            android:screenOrientation="portrait"
            >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".version_2.ui.Function_v2"
            android:screenOrientation="portrait"
            />
        <activity android:name=".version_2.ui.PhotoArt"
            android:screenOrientation="portrait"
            />
        <activity android:name=".version_2.ui.Setting_v2"
            android:screenOrientation="portrait"
            />
        <activity android:name=".version_2.ui.Album_v2"
            android:screenOrientation="portrait"
            />
        <activity android:name=".version_2.ui.PhotoActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.anhttvn.cropphoto_anhtt.CropImageActivity"
            android:screenOrientation="portrait"
            />
        <activity android:name=".ui.FrameSelect"
            android:screenOrientation="portrait"
            />
        <activity android:name="com.anhttvn.textinputlibary.Textinput"/>

    </application>

</manifest>
